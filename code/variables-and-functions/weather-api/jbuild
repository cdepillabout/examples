(jbuild_version 1)

(library
 ((name weather_api)
  (libraries
   (cohttp
    cohttp-lwt-unix
    core
    lwt
    lwt_ssl
    ppx_deriving
    ppx_deriving.show
    ssl
    yojson))
  (preprocess (pps (ppx_deriving.show)))
  (public_name weather_api)))

(executables
 ((names (main))
  (libraries (weather_api))))

(install
 ((section bin)
  (files ((main.exe as weather-api)))))
